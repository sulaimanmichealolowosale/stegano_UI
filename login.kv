<LoginScreen>:
    name:"login"
    MDFloatLayout:
        md_bg_color:1,1,1,1
        
        MDBoxLayout:
            orientation: "vertical"
            size_hint_x: .8
            spacing: "20dp"
            adaptive_height: True
            pos_hint: {"center_x": .5, "center_y": .7}
            # md_bg_color:.4, .5,.2,.4
            MDTextField:
                id:email
                text:"admin@admin.com"
                hint_text:"Email"
                helper_text: "someone@something.com"
                helper_text_mode: "persistent"
                required:root.required
                validator:"email"
                background_color: app.theme_cls.bg_normal
                on_text_validate:root.on_email_value_change(self)
                pos_hint:{"center_x":.5, "center_y":.5}
                background_color:1,1,1,0
                cursor_color:rgba(0,0,59,255)
                font_size:"14sp"
                cursor_width:"2sp"
                multiline:False
            MDTextField:
                id:password
                text:"sulaiman"
                hint_text:"Password"
                pos_hint:{"center_x":.5, "center_y":.5}
                background_color:1,1,1,0
                foreground_color:rgba(0,0,59,255)
                cursor_color:rgba(0,0,59,255)
                font_size:"14sp"
                cursor_width:"2sp"
                multiline:False
                password:True
        MDFloatLayout:
            pos_hint:{"left":1, "center_y":.7}
            size_hint:1, .2
            MDIconButton:
                icon: "eye-off"
                theme_text_color: "Hint"
                pos_hint:{"center_x":.8,"center_y":.23}
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    password.password = False if password.password is True else True
        
        MDRectangleFlatIconButton:
            id:login_btn
            icon: "login"
            text:"LOGIN"
            pos_hint:{"center_x":.5, "center_y":.5}
            size_hint:.6, None
            background_color:0,0,0,0
            on_press:
                root.login(email, password)
        MDBoxLayout:
            size_hint: 1, None
            height:self.minimum_height
            orientation: 'horizontal'
            pos_hint: {'center_x': .5, 'y':.3 }
            MDLabel:
                text: "Not registered?"
                size_hint:.5, None
                height: dp(10)
                halign:"right"
                pos_hint: {'center_y':.5 }
                # color:
            MDTextButton:
                text: ' signup here'
                size_hint:.5, None
                pos_hint: {'center_y':.5 }
                theme_text_color:"Custom"
                text_color:rgba(0, 128, 128, 255)
                on_release: root.to_register()

        MDLabel:
            text:root.error_text
            color:1,0,0,.7
            pos_hint:{"center_x":.5, "center_y":.2}
            halign:"center"

    MDSpinner:
        active:root.spinner_state
        size_hint:None, None
        height: dp(50)
        width: dp(50)
        pos_hint:{'center_x': .5, 'center_y': .2}


