<UserCard>:
    name:"user_card"
    size_hint: (.5, None)
    height: dp(200)
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: self.minimum_height
        FitImage:
            source: "airbnb.jpg"
            size_hint: (1, 1)
            radius: [5, 5, 5, 5]
            mipmap: True
            # on_release: root.get_image()
        TwoLineIconListItem:
            text: "Two-line item"
            secondary_text: "Secondary text here"
            IconLeftWidget:
                icon: 'delete'
                on_release: root.delete_user()
            